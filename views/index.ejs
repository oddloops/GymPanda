<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GymPanda</title>
    <link rel="stylesheet" type="text/css" href="../stylings/style.css">
  </head>
  
  <body>
    <header>
      <h1 class="site-name">Gym Panda</h1>
      <!-- Depending on user's state either show a login or logout button -->
      <% if (userId && username) { %>
      <form action="/logout" method="POST">
        <button id="logout-btn" class="log">Logout</button>
      </form>
      <% } else { %>
        <button type="button" id="login-btn" class="log">Login</button>
      <% } %> 
    </header>

    <!-- Table of Exercises (PRs) -->
    <div class="table-wrapper">
      <table id="workoutTable">
          <thead>
              <tr>
                  <th rowspan="2">Exercise</th>
                  <th rowspan="2">Body Part(s) Worked</th>
                  <th colspan="2">Personal Record Weight</th>
                  <th rowspan="2">Reps</th>
                  <th rowspan="2">Set</th>
                  <th rowspan="2">Date Achieved</th>
                  <th rowspan="2">✓ | X</th>
              </tr>
              <tr>
                <th>Pounds(LBS)</th>
                <th>Kilograms(KGS)</th>
              </tr>
          </thead>
          <tbody id="tableBody">
            <% if (rowData) { %>
              <% rowData.forEach((row) => { %>
                <tr>
                  <td class="exerciseName"><%= row.exercise_name %></td>
                  <td><%= row.part_worked %></td>
                  <td class="edit weightLbs" data-type="number"><%= row.weight_lbs %></td>
                  <td class="edit weightKgs" data-type="number"><%= row.weight_kgs %></td>
                  <td class="edit repNum" data-type="number"><%= row.reps %></td>
                  <td class="edit setNum" data-type="number"><%= row.sets %></td>
                  <td class="edit dateAchieved" data-type="date"><%= row.formatted_date %></td>
                  <td>
                    <button type="button" name="updateExercise">✓</button>
                    <button type="button" name="delRow">✗</button>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
      </table>
    <button type="button" id="addRow" class="rounded">+</button>
    </div>
    <script src="../scripts/table-ops.js"></script>
    <script src="../scripts/main-page.js"></script>
  </body>
</html>